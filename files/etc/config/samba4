config sambashare
	option auto '1'
	option name 'sda4'
	option path '/mnt/sda4'
	option read_only 'no'
	option guest_ok 'yes'
	option create_mask '0666'
	option dir_mask '0777'
	option device 'sda4'
	option inherit_owner 'yes'


config sambashare
	option auto '1'
	option name 'sdb1'
	option path '/mnt/sdb1'
	option read_only 'no'
	option guest_ok 'yes'
	option create_mask '0666'
	option dir_mask '0777'
	option device 'sdb1'
	option inherit_owner 'yes'
