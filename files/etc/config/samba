
config samba
	option name 'OpenWrt'
	option workgroup 'WORKGROUP'
	option description 'OpenWrt'
	option homes '1'
	option autoshare '0'

config sambashare
	option browseable 'yes'
	option path '/mnt/sdb1'
	option read_only 'no'
	option guest_ok 'no'
	option create_mask '0777'
	option dir_mask '0777'
	option name 'downlaod'
	option users 'root'

